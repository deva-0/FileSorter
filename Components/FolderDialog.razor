<div class="modal fade show" id="dialog" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add new folder</h4>
                <button type="button" class="close" @onclick="@Cancel">&times;</button>
            </div>
            <div class="modal-body">
                <p>Insert name for new folder</p>
                <input type="text" id="FolderName" name="FolderName" @bind="FolderName" placeholder="New folder name">
                <p>@Alert</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick=@OkWithValue>Add folder</button>
                <button type="button" class="btn btn-danger" @onclick="@Cancel">Cancel</button>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter] public string[]? ExistingFolders { get; set; }
    [Parameter] public EventCallback<string> OnClose { get; set; }
    public string? Alert { get; set; }
    public string? FolderName { get; set; }
    private async Task Cancel()
    {
        await InvokeAsync(() => OnClose.InvokeAsync());
    }
    private async Task Ok()
    {
        await InvokeAsync(() => OnClose.InvokeAsync());
    }
    private async Task OkWithValue()
    {
        if (String.IsNullOrWhiteSpace(FolderName))
        {
            Alert = "Cannot add folder without name";
            return;
        }
        if (ExistingFolders!.Contains(FolderName))
        {
            Alert = "Folder with that name already exists";
            return;
        }
        await InvokeAsync(() => OnClose.InvokeAsync(FolderName));
    }
}